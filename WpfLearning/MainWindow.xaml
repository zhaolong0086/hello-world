        xmlns:ioo="clr-namespace:WpfLearning;assembly=IoOperations"
        xmlns:pal="clr-namespace:WpfLearning;assembly=PanelsAndLayout"
        Title="MainWindow" Height="650" Width="825">
    <Grid>
        <TabControl SelectedIndex="0">
            <TabItem Header="Panels and Layout">
                <pal:PanelAndLayout/>
            </TabItem>
            <TabItem Header="Data binding">
                <db:DataBindingTester/>
            </TabItem>
            <TabItem Header="Io Operations">
                <ioo:IoOperationTester/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
